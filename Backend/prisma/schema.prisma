generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String         @unique
  id           Int            @id @default(autoincrement())
  pwHash       String
  comments     Comment[]
  pins         Pin[]
  Viewable     Viewable[]
  pinVotes     pinVotes[]
  commentVotes commentVotes[]
}

model Viewable {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  pin    Pin  @relation(fields: [pinId], references: [id])
  pinId  Int

  @@id([userId, pinId])
}

model Pin {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userID], references: [id])
  userID    Int
  text      String     @db.VarChar(300)
  upvotes   Int
  downvotes Int
  imageURL  String?
  longitude Float
  latitude  Float
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]
  Viewable  Viewable[]
  pinVotes  pinVotes[]
}

model Comment {
  id           Int            @id @default(autoincrement())
  userID       Int
  user         User           @relation(fields: [userID], references: [id])
  pinID        Int
  pin          Pin            @relation(fields: [pinID], references: [id])
  text         String         @db.VarChar(300)
  upvotes      Int
  downvotes    Int
  commentVotes commentVotes[]
}

model pinVotes {
  userID Int
  user   User @relation(fields: [userID], references: [id])
  pinID  Int
  pin    Pin  @relation(fields: [pinID], references: [id])
  vote   Int

  @@unique([userID, pinID])
}

model commentVotes {
  userID    Int
  user      User    @relation(fields: [userID], references: [id])
  commentID Int
  comment   Comment @relation(fields: [commentID], references: [id])
  vote      Int

  @@unique([userID, commentID])
}
